<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon4"
    tools:context=".Change_Figure">


    <EditText
        android:id="@+id/UpName"
        android:layout_width="350dp"
        android:layout_height="47dp"
        android:layout_below="@+id/image_base"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/styles"
        android:hint="  Название аниме"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_base"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/Status_fig"
        android:layout_width="350dp"
        android:layout_height="47dp"
        android:layout_below="@+id/UpPrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/styles"
        android:hint="  Статус фигурки"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpPrice"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_base"
        android:layout_width="298dp"
        android:layout_height="291dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:minWidth="250dp"
        android:minHeight="250dp"
        android:onClick="nonePicture"
        android:scaleType="fitXY"
        android:src="@drawable/figure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/UpPrice"
        android:layout_width="350dp"
        android:layout_height="47dp"
        android:layout_below="@+id/UpName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/styles"
        android:hint="  Имя персонажа"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpName"
        tools:ignore="DuplicateClickableBoundsCheck,MissingConstraints,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/Back"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="342dp"
        android:background="@drawable/styles"
        android:onClick="onClick2"
        app:cornerRadius="25dp"
        app:icon="@drawable/back"
        app:iconGravity="top"
        app:iconPadding="20dp"
        app:iconSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/hochy"
        android:layout_width="81dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:onClick="onNumberClick"
        android:text="Хочу"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Status_fig" />

    <Button
        android:id="@+id/Change"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_below="@+id/UpPrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/styles"
        android:minHeight="48dp"
        android:onClick="Update_bt"
        android:text="Изменить"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Status_fig"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Delete"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_below="@+id/UpPrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="45dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="239dp"
        android:background="@drawable/styles"
        android:onClick="Delete_bt"
        android:text="Удалить"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Status_fig"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/est"
        android:layout_width="113dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="Уже есть"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Status_fig" />

    <Button
        android:id="@+id/pyt"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="В пути"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Status_fig" />

    <Button
        android:id="@+id/pred"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="Предзаказ"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Status_fig" />

</androidx.constraintlayout.widget.ConstraintLayout>