<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon4"
    tools:context=".Add_Figure">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ImgBut"
        android:layout_width="295dp"
        android:layout_height="291dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:backgroundTint="#029D8D8F"
        android:minWidth="250dp"
        android:minHeight="250dp"
        android:onClick="onClickChooseImage"
        android:scaleType="fitXY"
        android:src="@drawable/figure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/pred"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="Предзаказ"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Status_fig" />

    <EditText
        android:id="@+id/edtPrice"
        android:layout_width="350dp"
        android:layout_height="47dp"
        android:layout_below="@+id/edtDrink"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/styles"
        android:hint="  Имя персонажа"
        android:minHeight="48dp"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDrink"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck"></EditText>

    <Button
        android:id="@+id/pyt"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="В пути"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Status_fig" />

    <EditText
        android:id="@+id/edtDrink"
        android:layout_width="350dp"
        android:layout_height="47dp"
        android:layout_below="@+id/ImgBut"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/styles"
        android:hint="  Аниме"
        android:minHeight="48dp"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgBut"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,DuplicateClickableBoundsCheck" />

    <Button
        android:id="@+id/Add"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Status_fig"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="45dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/styles"
        android:minHeight="48dp"
        android:onClick="Add"
        android:text="Добавить"
        android:textColor="@color/white"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Status_fig"
        app:strokeWidth="1dp"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/hochy"
        android:layout_width="81dp"
        android:layout_height="45dp"
        android:layout_marginTop="64dp"
        android:text="Хочу"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Status_fig" />

    <AutoCompleteTextView
        android:id="@+id/Status_fig"
        android:layout_width="350dp"
        android:layout_height="47dp"
        android:layout_below="@+id/edtPrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/styles"
        android:focusable="false"
        android:hint="  Статус фигурки"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPrice"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/est"
        android:layout_width="113dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="Уже есть"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Status_fig" />

    <Button
        android:id="@+id/BackAdd"
        android:layout_width="53dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="342dp"
        android:background="@drawable/styles"
        android:backgroundTint="#7147D7"
        android:onClick="onClick2"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:icon="@drawable/back"
        app:iconGravity="top"
        app:iconPadding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="1dp"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>